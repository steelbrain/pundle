{
  "name": "pundle",
  "private": true,
  "version": "0.0.0",
  "description": "Pundle root repository",
  "scripts": {
    "lint-staged": "lint-staged",
    "bootstrap": "lerna bootstrap",
    "clean": "rm -rf packages/*/lib",
    "build": "npm run clean; lerna exec --parallel -- ~/projects/steelbrain/babel-cli-flow/lib/index.js src --out-dir lib",
    "watch": "npm run build -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steelbrain/pundle.git"
  },
  "author": "steelbrain",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steelbrain/pundle/issues"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.js": [
      "prettier",
      "eslint"
    ]
  },
  "workspaces": ["packages/*"],
  "homepage": "https://github.com/steelbrain/pundle#readme",
  "dependencies": {
    "babel-cli-flow": "^2.0.0",
    "babel-preset-steelbrain": "^5.0.3",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-steelbrain": "^4.0.0-5",
    "eslint-plugin-prettier": "^2.3.1",
    "flow-bin": "^0.57.3",
    "lerna": "^2.4.0",
    "lint-staged": "^4.2.3",
    "pre-commit": "^1.2.2",
    "prettier": "1.7.4"
  }
}
